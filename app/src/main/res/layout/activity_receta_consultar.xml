<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RecetaConsultarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RecetaConsultar_titulo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editRecetaIdConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/RecetaConsultar_hint_id"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnRecetaBuscarConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RecetaConsultar_btn_consultar"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView android:id="@+id/textRecetaDui" style="@style/TextViewStyleConsulta" android:text="DUI:"/>
    <TextView android:id="@+id/textRecetaIdDoctor" style="@style/TextViewStyleConsulta" android:text="ID Doctor:"/>
    <TextView android:id="@+id/textRecetaNombrePaciente" style="@style/TextViewStyleConsulta" android:text="Paciente:"/>
    <TextView android:id="@+id/textRecetaFecha" style="@style/TextViewStyleConsulta" android:text="Fecha:"/>
    <TextView android:id="@+id/textRecetaEdad" style="@style/TextViewStyleConsulta" android:text="Edad:"/>
    <TextView android:id="@+id/textRecetaObservaciones" style="@style/TextViewStyleConsulta" android:text="Observaciones:"/>

    <Button
        android:id="@+id/btnRecetaVerDetallesConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Detalles"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>
</LinearLayout>