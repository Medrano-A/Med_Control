<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:stretchColumns="1"
    tools:context=".DepartamentoInsertarActivity"
    >

    <TableRow>
        <TextView
            android:id="@+id/dptoInsertar"
            android:text="@string/InsertarDepartamento"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/dptoIdInsertar"
            android:text="@string/idDepartamentoDpto"
            />
        <Spinner
            android:id="@+id/dptoIdInsertarSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/dptoNomInsertar"
            android:text="@string/nombreDpto"
            />
        <EditText
            android:id="@+id/dptoNomInsertarEdit"
            android:inputType="text"
            android:maxLength="30"
            />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/dptoInsertarBtn"
            android:onClick="insertarDpto"
            android:text="@string/InsertarDatos" />

        <Button
            android:id="@+id/dptoInsertarBtnTxt"
            android:onClick="limpiarCampos"
            android:text="@string/LimpiarCampos"
            />

    </TableRow>

</TableLayout>