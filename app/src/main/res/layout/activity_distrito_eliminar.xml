<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:stretchColumns="1"
    tools:context=".DistritoEliminarActivity">

    <TableRow>
        <TextView
            android:id="@+id/distElim"
            android:text="@string/EliminarDistrito"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/disIdElim"
            android:text="@string/idDistrito"
            />
        <EditText
            android:id="@+id/disIdElimEdit"
            android:inputType="number"
            android:maxLength="10"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/muDisiIdElim"
            android:text="@string/idMunicipioDist"
            />
        <EditText
            android:id="@+id/muDisiIdElimEdit"
            android:inputType="number"
            android:maxLength="10"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/disElimBtn"
            android:onClick="elimDis"
            android:text="@string/EliminarDatos" />

        <Button
            android:id="@+id/disElimBtnTxt"
            android:onClick="limpiarCampos"
            android:text="@string/LimpiarCampos"
            />
    </TableRow>

</TableLayout>