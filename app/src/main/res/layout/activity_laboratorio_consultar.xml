<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dip"
    android:stretchColumns="1"

    tools:context=".LaboratorioConsultarActivity">

    <TableRow>
        <TextView
            android:id="@+id/laboConsultar"
            android:text="@string/ConsultarLabo"
            android:textSize="24sp"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/laboIdCons"
            android:text="@string/idLabo"/>
        <EditText
            android:id="@+id/laboIdConsEdit"
            android:inputType="number"
            android:maxLength="8"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/laboConsultarBtnId"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="consultarLabo"
            android:text="@string/ConsultarDatos"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/laboNombreActu"
            android:text="@string/laboratorioNombre"
            />
        <EditText
            android:id="@+id/laboNombreActuEdit"
            android:inputType="text"
            android:maxLength="30"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/laboTipoActu"
            android:text="@string/laboratorioTipo"
            />
        <EditText
            android:id="@+id/laboTipoActuEdit"
            android:inputType="text"
            android:maxLength="30"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/laboTelActu"
            android:text="@string/laboratorioTelefono"
            />
        <EditText
            android:id="@+id/laboTelActuEdit"
            android:inputType="number"
            android:maxLength="8"
            />
    </TableRow>

    <TableRow style="?android:attr/buttonBarStyle">
        <Button
            android:id="@+id/laboConsultarBtnTxt"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="limpiarCampos"
            android:text="@string/LimpiarCampos"
            android:layout_gravity="center_horizontal"
            />
    </TableRow>


</TableLayout>
