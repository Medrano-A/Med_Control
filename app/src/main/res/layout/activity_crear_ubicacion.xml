<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Encabezado con icono y título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:paddingBottom="24dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"
                android:contentDescription="icono agregar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/agregar_ubicacion"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Formulario -->
        <EditText
            android:id="@+id/etIdUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/id_de_ubicacion"
            android:inputType="number" />

        <EditText
            android:id="@+id/etNombreUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre_de_la_ubicacion"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etIdDistrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/id_del_distrito"
            android:inputType="number"
            android:layout_marginTop="12dp" />

        <!-- Botón para agregar -->
        <Button
            android:id="@+id/btnAgregarUbicacion"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/agregar"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>

