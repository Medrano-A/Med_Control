<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:stretchColumns="1"
    android:padding="16dp">

    <TableRow>
        <TextView
            android:text="@string/idLocal"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/editLocal"
            android:inputType="text"
            android:maxLength="4"
            android:layout_marginBottom="8dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="@string/idUbicacion"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/editUbicacion"
            android:inputType="text"
            android:maxLength="30"
            android:layout_marginBottom="8dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="@string/nombreLocal"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/editNombre"
            android:inputType="text"
            android:maxLength="30"
            android:layout_marginBottom="8dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="@string/tipo"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/editTipo"
            android:inputType="text"
            android:layout_marginBottom="8dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="@string/telefonoLocal"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/editTelefono"
            android:inputType="text"
            android:maxLength="8"
            android:layout_marginBottom="8dp" />
    </TableRow>

    <!-- Botones en la misma fila -->
    <TableRow>

        <Button
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:onClick="actualizarLocal"
            android:text="@string/actualizar" />

        <Button
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:onClick="limpiarTexto"
            android:text="@string/limpiar" />

        <Button
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:onClick="consultarLocal"
            android:text="@string/buscar" />
    </TableRow>

</TableLayout>

